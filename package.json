{
  "name": "@ryuux/prompt",
  "version": "2.4.0",
  "description": "A powerful and customizable CLI prompt library for interactive user input.",
  "type": "module",
  "main": "dist/index.js",
  "files": [
    "dist/**/*"
  ],
  "keywords": [
    "iloveryuux-tools",
    "cli",
    "prompt"
  ],
  "author": "Ryo",
  "license": "MIT",
  "homepage": "https://github.com/iloveryuux/prompt#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/iloveryuux/prompt.git"
  },
  "bugs": {
    "url": "https://github.com/iloveryuux/prompt/issues"
  },
  "engines": {
    "node": ">=20"
  },
  "packageManager": "pnpm@10.17.1",
  "scripts": {
    "build": "tsup",
    "build:watch": "tsup --watch",
    "format": "biome format --write",
    "format:check": "biome format",
    "lint": "biome lint --fix",
    "lint:check": "biome lint",
    "prepublishOnly": "npm run build",
    "test": "vitest",
    "commit": "commitlint --edit ${1}"
  },
  "dependencies": {
    "@ryuux/palette": "^1.0.0",
    "sqlite": "^5.1.1",
    "sqlite3": "^5.1.7"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.0.0",
    "@commitlint/cli": "^20.0.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@ryuux/rules": "^1.1.2",
    "@types/node": "^22.1.0",
    "lefthook": "^1.7.11",
    "tsup": "^8.2.4",
    "typescript": "^5.5.4",
    "vitest": "^3.0.0"
  },
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    }
  }
}
